<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="lu.fisch.canze.fragments.TechnicalFragment"
    android:stretchColumns="3"
    android:id="@+id/table"
    android:layout_column="1"
    android:layout_row="3"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/scroller_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:fadeScrollbars="false">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/button"
                    android:id="@+id/buttonChargingTech"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_Charging"
                    android:drawableStart="@mipmap/button_charge"
                    android:drawableLeft="@mipmap/button_charge"
                    android:layout_column="0" />

                <Button
                    style="?android:attr/button"
                    android:id="@+id/buttonDtc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_DtcReadout"
                    android:drawableStart="@mipmap/button_attention"
                    android:drawableLeft="@mipmap/button_attention"
                    android:layout_column="1" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/button"
                    android:id="@+id/buttonChargingGraphs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_ChargingGraphs"
                    android:drawableStart="@mipmap/button_charging_graphs"
                    android:drawableLeft="@mipmap/button_charging_graphs"
                    android:layout_column="0" />

                <Button
                    style="?android:attr/button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_Firmware"
                    android:id="@+id/buttonFirmware"
                    android:drawableStart="@mipmap/button_firmware"
                    android:drawableLeft="@mipmap/button_firmware"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/button"
                    android:id="@+id/buttonChargingPrediction"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_ChargingPrediction"
                    android:drawableStart="@mipmap/button_charge"
                    android:drawableLeft="@mipmap/button_charge"
                    android:layout_column="0" />

                <Button
                    style="?android:attr/button"
                    android:id="@+id/buttonElmTest"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_ElmTesting"
                    android:drawableStart="@mipmap/button_elm327"
                    android:drawableLeft="@mipmap/button_elm327"
                    android:layout_column="1" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_Range"
                    android:id="@+id/buttonRange"
                    android:drawableStart="@mipmap/button_range"
                    android:drawableLeft="@mipmap/button_range"
                    android:layout_column="0" />


                <Button
                    style="?android:attr/button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_Climate"
                    android:id="@+id/buttonClimaTech"
                    android:drawableStart="@mipmap/button_thermometer"
                    android:drawableLeft="@mipmap/button_thermometer"
                    android:layout_column="1" />

            </TableRow>


        </TableLayout>

    </ScrollView>

</LinearLayout>
